#!/usr/bin/env bash

set -e

OSX_BOOTSTRAP=${OSX_BOOTSTRAP:-"~/.osx-bootstrap"}

if [ ! -d "$OSX_BOOTSTRAP" ]
then
  git clone -b master https://github.com/fs/osx-bootstrap.git "$OSX_BOOTSTRAP"
fi

modules=(
  osx_version
  osx_update
  projectdir
  ssh
  brew
  cask
  ruby
  node_js
  osx_defaults
  dotfiles
  sublime_bootstrap
)

for module in "${modules[@]}"
do
  source "$OSX_BOOTSTRAP/modules/$module.bash"
done

